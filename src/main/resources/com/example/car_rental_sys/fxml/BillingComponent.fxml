<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.*?>
<Pane prefHeight="750.0" prefWidth="530.0" style="-fx-background-color: transparent;"
      stylesheets="@../style/billingComponent.css" xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.car_rental_sys.controllers.BillingComponentController">
   <Label layoutX="33.0" layoutY="52.0" text="Billing &amp; Wallet" textFill="#fffbfb">
      <font>
         <Font name="Arial Bold" size="24.0"/>
      </font>
   </Label>
   <Label layoutX="33.0" layoutY="82.0" text="Update your payment information or check transaction actvities"
          textFill="#f2f3f5">
      <font>
         <Font name="Arial Bold" size="12.0"/>
      </font>
   </Label>
   <ScrollPane fx:id="billCardList" layoutX="33.0" layoutY="115.0" prefHeight="130.0" prefWidth="464.0"
               style="-fx-background: #101010; -fx-border-color: #101010;">
      <padding>
         <Insets bottom="5.0" top="5.0"/>
      </padding>
   </ScrollPane>
   <Pane fx:id="billCardDetailBox" layoutX="35.0" layoutY="263.0" prefHeight="160.0" prefWidth="460.0">
      <fx:include source="showCardDetails.fxml"/>
   </Pane>
   <Label layoutX="38.0" layoutY="449.0" text="Recent Activity" textFill="#fffbfb">
      <font>
         <Font name="Arial Bold" size="18.0"/>
      </font>
   </Label>
   <Button fx:id="billAllBtn" layoutX="205.0" layoutY="451.0" mnemonicParsing="false"
           onMouseClicked="#billAllBtnClicked" prefHeight="23.0" prefWidth="62.0"
           style="-fx-background-insets: 0; -fx-border-insets: 0; -fx-cursor: hand; -fx-background-color: transparent;"
           styleClass="cusBillButton" text="All" textFill="SILVER">
      <font>
         <Font name="Arial Bold" size="12.0"/>
      </font>
   </Button>
   <Button fx:id="billCompleteBtn" layoutX="269.0" layoutY="451.0" mnemonicParsing="false"
           onMouseClicked="#billCompleteBtnClicked" prefHeight="23.0" prefWidth="79.0"
           style="-fx-background-insets: 0; -fx-border-insets: 0; -fx-cursor: hand; -fx-background-color: transparent;"
           styleClass="cusBillButton" text="Completed" textFill="SILVER">
      <font>
         <Font name="Arial Bold" size="12.0"/>
      </font>
   </Button>
   <Button fx:id="billCancelBtn" layoutX="422.0" layoutY="451.0" mnemonicParsing="false"
           onMouseClicked="#billCancelBtnClicked" prefHeight="18.0" prefWidth="70.0"
           style="-fx-background-insets: 0; -fx-border-insets: 0; -fx-cursor: hand; -fx-background-color: transparent;"
           styleClass="cusBillButton" text="Canceled" textFill="SILVER">
      <font>
         <Font name="Arial Bold" size="12.0"/>
      </font>
   </Button>
   <Pane fx:id="cusBillTable" layoutX="33.0" layoutY="482.0" prefHeight="140.0" prefWidth="470.0"/>
   <Pane fx:id="pagContainer" layoutX="100.0" layoutY="700.0" prefHeight="30.0" prefWidth="330.0"/>
   <Button fx:id="billPendingBtn" layoutX="350.0" layoutY="451.0" mnemonicParsing="false"
           onMouseClicked="#billPendingBtnClicked" prefHeight="23.0" prefWidth="70.0"
           style="-fx-background-insets: 0; -fx-border-insets: 0; -fx-cursor: hand; -fx-background-color: transparent;"
           styleClass="cusBillButton" text="Pending" textFill="SILVER">
      <font>
         <Font name="Arial Bold" size="12.0"/>
      </font>
   </Button>
</Pane>
