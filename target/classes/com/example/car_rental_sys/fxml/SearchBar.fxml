         <font>
            <Font name="Arial" size="14.0"/>
         </font>
         <padding>
            <Insets left="15.0"/>
         </padding>
      </Button>
      <ImageView fitHeight="18.0" fitWidth="18.0" layoutX="13.0" layoutY="9.0" pickOnBounds="true"
                 preserveRatio="true" style="-fx-cursor: hand">
         <Image url="@../image/UI/filterIcon.png"/>
      </ImageView>
   </Pane>
</Pane>
