            <Font name="Arial" size="13.0"/>
         </font>
      </TextField>
      <ImageView fitHeight="21.0" fitWidth="21.0" layoutX="10.0" layoutY="7.0" pickOnBounds="true"
                 preserveRatio="true">
         <Image url="@../image/UI/searchIcon.png"/>
      </ImageView>
   </Pane>
   <Pane layoutX="375.0" prefHeight="35.0" prefWidth="90.0">
      <Button layoutX="5.0" mnemonicParsing="false" onMouseClicked="#filterBtnClicked" prefHeight="35.0"
