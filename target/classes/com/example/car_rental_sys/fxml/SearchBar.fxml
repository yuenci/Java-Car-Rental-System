   <Pane prefHeight="35.0" prefWidth="370.0">
      <TextField prefHeight="35.0" prefWidth="370.0" promptText="Search for ID, status or something..."
                 style="-fx-background-color: #F7F8FA; -fx-background-radius: 6px; -fx-border-radius: 6px; -fx-border-color: #C9CDD4; -fx-background-insets: 0; -fx-border-insets: 0;">
         <padding>
            <Insets left="40.0"/>
